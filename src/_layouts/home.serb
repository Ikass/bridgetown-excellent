<!doctype html>
<html lang="{%= site.locale %}">
  <head>
    {%@ "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    {%# "menu", metadata: site.metadata %}
    {%@ "header", metadata: site.metadata %}

    <main id="main" class="flow">
      <article class="region wrapper prose flow">
        {%= yield %}
      </article>
    </main>

    {%@ "footer", metadata: site.metadata %}
  </body>
</html>
